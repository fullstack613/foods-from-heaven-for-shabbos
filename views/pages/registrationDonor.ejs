<!DOCTYPE html>
<html>

<%-include ../partials/header %>

<head>
    <title>Donors Registration</title>
    <link rel="icon" type="image/ico" href="images/icon.Shabbos.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

    <style>
        * {
            box-sizing: border-box;
        }

        a {
            color: rgb(94, 6, 6);
        }

        .background {
            background: lightyellow;
            margin: auto;
        }

        .barNavigation {
            list-style-type: none;
            text-align: center;
            color: rgb(94, 6, 6);
            font-family: calligraphy;
            font-style: italic;
            font-size: 25px;
            font-weight: bold;
            position: relative;
            top: 10px;
            background-color: burlywood;
            margin: auto;
            height: 40px;
            overflow: hidden;
        }

        .loginBlock {
            /* font-size: 14px; */
            margin-top: 2%;
            text-align: left;
            box-shadow: 10px 10px 10px 10px burlywood;
        }
    </style>

</head>

<body>
    <div class="container-fluid">

        <div class="barNavigation">
            <div> Welcome to the Registration Page for Donors for "Foods for Families".</div>
        </div>
        <div class="row">
            <div class="col-lg-1"></div>
            <div class="col-lg-10">
                <div class="loginBlock">
                    <form id="donorRegistrationForm">
                        <div class="col-lg-1"></div>
                        <div class="col-lg-11">
                            <div class="row">
                                <div class="col-lg-4">
                                    <br>
                                    First Name:<br>
                                    <input type="text" name="firstName" id="firstName" required> <br>
                                    Last Name:<br>
                                    <input type="text" name="lastName" id="lastName" required><br>
                                    Email:<br>
                                    <input type="text" name="email" id="email" required><br>
                                    <br><br><br>
                                    <input type="checkbox" name="donor" id="donor" value="true" required>
                                    <sp style="font-size: 15px">YES! I am interested in being a donor!
                                    </sp>
                                    <input class="hide" type="checkbox" name="family" id="family" value="false">
                                    <!-- <sp></sp>YES! We are interested in being part of "Foods for Families". -->

                                </div>

                                <div class="col-lg-4">
                                    <br>
                                    Cell Phone:<br>
                                    <input type="text" name="cellPhone" id="cellPhone" required><br>
                                    Business or Home Phone:<br>
                                    <input type="text" name="homePhone" id="homePhone" value=""><br>
                                    Address:<br>
                                    <input type="text" name="address" id="address" value=" "><br>
                                    <br><br><br> <a href="loginDonor"> <u>ALREADY a registered donor?</u></a>

                                </div>
                                <div class="col-lg-4">
                                    <br>User Name:<br>
                                    <input type="text" name="userName" id="userName" required><br>
                                    Password (not shared with ANYONE ... EVER):<br>
                                    <input type="text" name="password" id="password" required>
                                    <!-- Family Size:<br> -->
                                    <input class="hide" type="number" name="familySize" id="familySize" value=0><br>
                                    <!-- this is HIDDEN in Donor Reg and seen in Family Reg-->
                                    Special Requests for Donations:<br>
                                    <textarea name="specialRequests" rows="2" cols="42" id="specialRequests"
                                        value="000"></textarea><br>
                                    <br>
                                    <input type="submit" value="SUBMIT YOUR DONOR REGISTRATION INFO" id="submitBtn" />
                                    <br>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-4">
                            </div>
                            <div class="col-lg-4">
                            </div>
                            <div class="col-lg-4">

                            </div>
                        </div>
                        <br>
                    </form>



                </div>
            </div>
        </div>
</body>

<script>
    // listen to click event of the submit button
    $('#submitBtn').click(function (e) {
        // make sure the form is not submitted
        e.preventDefault();
        // run the form validations
        document.getElementById('donorRegistrationForm').checkValidity();
        // check if the form is valid
        if (document.getElementById('donorRegistrationForm').reportValidity()) {
            // form is valid, create a post request
            $.ajax({
                type: "post",
                url: "donorRegistration/registration",
                // the user data 
                data: {
                    userName: $('#userName').val(),
                    password: $('#password').val(),
                },
                complete: // this function will run if the request is successful
                    function (xhr, status) {
                        // check if there is an error
                        if (status === 'error')
                            alert(xhr.responseText);
                        else {
                            alert(xhr.responseText);
                            window.location.replace("./donations");
                        }

                    }
            });
        }
    });
</script>

</html>